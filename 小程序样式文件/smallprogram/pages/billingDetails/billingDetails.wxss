/* pages/billingDetails/billingDetails.wxss */
.life_billing_wrap{
	width: 100%;
	height: 100%;
	padding-top: 100rpx;
	overflow-y: scroll;
}
.life_billing_logo{
	padding-top: 45rpx;
	text-align: center;
}
.life_billing_logo image{
	margin: 0 auto;
	height: 103rpx;
    width: 103rpx;
}
.life_billing_name{
	text-align: center;
	font-size: 36rpx;
    line-height: 80rpx;
}
.life_billing_money{
	text-align: center;
	font-size: 72rpx;
}
.life_bond_payment{
    overflow: hidden;
    padding: 0 3%;
    line-height: 100rpx;
    font-size: 36rpx;
    border-bottom: 1rpx solid #d3d3d3;
}
.life_bond_payment_span1{
	float: left;
	color: #9d9d9d;
}
.life_bond_payment_span2{
	float: right;	
	color: #222222;
}
.life_billing_message{
    overflow: hidden;
    padding: 0 3%;
    line-height: 70rpx;
    font-size: 36rpx;
}
.life_sure_btn{
    width: 80%;
    background-color: #ff5858;
    color: white;
    line-height: 86rpx;
    text-align: center;
    font-size: 38rpx;
    margin-left: 10%;
    margin-top: 70rpx;
    border-radius: 8rpx;
    display: inline-block;
    margin-bottom: 100rpx;
}
