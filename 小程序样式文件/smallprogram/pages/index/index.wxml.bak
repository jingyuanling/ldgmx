	<view class="life_home_nav_inp">
		
			<input type="text" name="" id="" value="" placeholder="搜索你想要的" />
		
		<image src="../../res/images/search_img.png"/>
	</view>
	<view class="life_home_nav_right">
		
			<image src="../../res/images/saoyisaoimg.png"/>
		
	</view>
     </view>

