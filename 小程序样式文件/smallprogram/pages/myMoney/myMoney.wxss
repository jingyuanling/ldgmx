/*我的资金*/
.life_mymoney_wrap{
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    background-color: #ffffff;
    padding-top: 100rpx;
    padding-bottom: 100rpx;
}
.money_total{
  width: 100%;
  background-color: #ffffff;
  padding-bottom: 3rpx;
  margin-bottom: 16rpx;
  text-align: center;
  border-bottom: 1rpx solid #ededed;
}
.money_total image{
  width: 92rpx;
  height: 92rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.money_total .p1{
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
}
.money_total .p2{
  font-size: 60rpx;
  text-align: center;
}
.balance_subsidiary{
  text-align: center;
  line-height: 100rpx;
  color: #222222;
  font-size: 28rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
}