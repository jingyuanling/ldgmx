/* pages/map/map.wxss */
.life_map_wrap{
	width: 100%;
	height: 100%;
	overflow-y: scroll;
    background-color: #efefef;
    padding-top: 100rpx;
    padding-bottom: 0;
}
.life_map_content{
	width: 100%;
	height: 600rpx;
}
.life_class_title{
	background-color: white;
	border: 1rpx solid #d3d3d3;
	overflow: hidden;
  display: flex;
  justify-content: space-around;
}
.life_class_title span{
	display: inline-block;
	font-size: 37rpx;
	height: 100rpx;
	line-height: 100rpx;
	box-sizing: border-box;
}
.life_class_title .life_class_title_span_active{
	font-size: 45rpx;
	color:#ff6b6a;
}
.home_good_recommend{
	width: 100%;
	padding: 20rpx 30rpx;
	box-sizing: border-box;
	background-color: #ffffff;
}
.home_good_recommend_title{
	font-size: 34rpx;
	padding-left: 13rpx;
	text-align: left;
	border-left: 8rpx solid #fd9d21;
}
.home_good_recommend_list{
	width: 100%;
}
.home_good_recommend_list .good_list_left_img{
	float: left;
	width: 160rpx;
    height: 160rpx;
}
.home_good_recommend_list .good_list_left_img image{
	width: 100%;
	height: 100%;
}
.home_good_recommend_list .good_list_right_text{
	width: 100%;
	height: 160rpx;
  padding-left: 180rpx;
	box-sizing: border-box;
}
.home_good_recommend_list ul li{
	margin-top: 20rpx;
  border-bottom:1rpx dashed #d7d7d7;
  display:block;
  padding-bottom:10rpx;

}
.good_list_right_text .right_text_goods_name,.good_list_right_text .good_list_right_address,.good_list_right_text .good_list_right_deduction{
	height: 55rpx;
	width: 100%;
	line-height: 55rpx;
	font-size: 30rpx;
	overflow: hidden;
}
.right_text_goods_name{
	color: #000000;
	overflow: hidden;
}
.right_text_goods_name span{
	font-size: 24rpx;
	color: #9d9d9d;
	margin-left: 20rpx;
	float: left;
}
.good_list_right_address{
	position: relative;
}
.good_list_right_text .right_text_goods_name p,.good_list_right_text .good_list_right_address p{
	display: inline-block;
	max-width: 340rpx;
	overflow: hidden;
	float: left;
}
.good_list_right_address span{
	display: inline-block;
	height: 35rpx;
	line-height: 35rpx;
	margin-top: 10rpx;
	padding: 0 20rpx;
	color: #ff7800;
	border: 1rpx solid #ff7800;
	position: absolute;
    right: 30rpx;
}
.good_list_right_deduction{
	color: #ff6b6a;
}
.good_list_right_deduction span{
	font-size: 34rpx;
}