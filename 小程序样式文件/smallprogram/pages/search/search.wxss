/* pages/search/search.wxss */
/*导航栏样式更改*/
.life_nav_search_inp{
	left: 15%;
}
.life_search_wrap{
	width: 100%;
	padding-top: 120rpx;
}
.life_hot_search{
	width: 100%;
}
.life_hot_search_title,.life_hot_search_title2{
    font-size: 28rpx;
    line-height: 80rpx;
	color: #9d9d9d;
	padding-left: 3%;
}
.life_hot_search_title{
	padding-left: 0;
}
.life_hot_search_content{
	width: 100%;
	font-size: 0;
}
.life_hot_search span{
	border: 1rpx solid #d3d3d3;
	color: #666666;
    font-size: 30rpx;
    display: inline-block;
    padding: 15rpx 30rpx;
    border-radius: 10rpx;
    margin-bottom: 16rpx;
    margin-left: 20rpx;
}
.life_search_history{
	width: 100%;
	padding: 0 3%;
	margin-top: 30rpx;
}
.life_search_history li{
	font-size: 30rpx;
	width: 100%;
  padding: 25rpx 0 10rpx;
	color: #222222;
	border-bottom: 1rpx solid #d3d3d3;
}
.life_clear_his{
	margin-top: 30rpx;
	font-size: 30rpx;
	width: 100%;
	border-radius: 10rpx;
	line-height: 70rpx;
	text-align: center;
	color: #222222;
	border: 1rpx solid #d3d3d3;
}
