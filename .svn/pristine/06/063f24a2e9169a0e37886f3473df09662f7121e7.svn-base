.life_home_wrap{
	width: 100%;
	background-color: #efefef;
	padding-top: 50px;
	padding-bottom: 60px;
}
.life_home_classify{
	width: 100%;
	display: flex;
	justify-content: space-around;
	padding: 0.5em 0;
	background-color: #ffffff;
}
.life_home_classify a{
	width: 16%;
}
.life_home_classify .home_classify_among{
	width: 100%;
}
.life_home_classify .home_classify_among img{
	width: 100%;
}
.life_home_classify .home_classify_among p{
	text-align: center;
	font-size: 1em;
	line-height: 2.5em;
	color: #666666;
}
.life_home_hot{
	width: 100%;
	background-color: #ffffff;
	margin-top: 0.8em;
	padding-bottom: 1em;
}
.life_home_hot .home_hot_title img{
	height: 1em;
	display: inline-block;
	position: relative;
	top: -2px;
}
.life_home_hot .home_hot_title{
	display: inline-block;
	width: 100%;
	font-size: 1.3em;
	padding: 0.25em 0;
	text-align: center;
}
.home_hot_content{
	width: 100%;
	padding: 0 5%;
	box-sizing: border-box;
	overflow: hidden;
	margin-top: 0.3em;
}
.home_hot_content a{
	float: left;
	width: 48%;
	overflow: hidden;
}
.home_hot_content .home_hot_details{
	width: 100%;
}
.home_hot_content .home_hot_details:nth-child(1){
	margin-right: 4%;
}
.home_hot_details .home_hot_discount,.home_hot_details .home_hot_merchant_logo{
	float: left;
	width: 50%;
} 
.home_hot_details .home_hot_discount{
	line-height: 180%;
}
.home_hot_details .home_hot_merchant_logo img{
	width: 100%;
}
.home_hot_details .home_hot_discount_P{
	text-align: center;
	font-size: 1.0em;
}
.home_hot_details .home_hot_discount_span{
	display: inline-block;
	width: 100%;
	text-align: center;
	color: #ff6767;
	font-size: 0.9em;
}
.home_good_recommend{
	width: 100%;
	margin-top: 0.8em;
	padding: 0.5em;
	box-sizing: border-box;
	background-color: #ffffff;
}
.home_good_recommend_title{
	font-size: 1.3em;
	padding-left: 0.8em;
	text-align: left;
	border-left: 0.2em solid #fd9d21;
}
.home_good_recommend_list{
	overflow: hidden;
	width: 100%;
}
.home_good_recommend_list .good_list_left_img{
	float: left;
	width: 6em;
	height: 6em;
}
.home_good_recommend_list .good_list_left_img img{
	width: 100%;
	height: 100%;
}
.home_good_recommend_list .good_list_right_text{
	width: 100%;
	height: 6em;
	padding-left: 6.3em;
	box-sizing: border-box;
}
.home_good_recommend_list ul li{
	margin-top: 1em;
}
.good_list_right_text>div{
	height: 2em;
	width: 100%;
	line-height: 2em;
	font-size: 1.1em;
}
.right_text_goods_name{
	color: #000000;
	overflow: hidden;
}
.right_text_goods_name span{
	font-size: 0.9em;
	color: #9d9d9d;
	margin-left: 0.5em;
	float: left;
}
.good_list_right_address{
	position: relative;
}
.good_list_right_text>div>p{
	display: inline-block;
	max-width: 12em;
	height: 2em;
	overflow: hidden;
	float: left;
}
.good_list_right_address span{
	display: inline-block;
	height: 1.5em;
	line-height: 1.5em;
	margin-top: 0.25em;
	padding: 0 0.2em;
	color: #ff7800;
	border: 1px solid #ff7800;
	position: absolute;
	right: 0;
}
.good_list_right_deduction{
	color: #ff6b6a;
}
/*插件样式更改*/
.swiper-container{
	width: 100%;
}
.life_home_banner .swiper-slide img{
	width: 100%;
}
.swiper-pagination-bullet {
	width: 10px;
	height: 10px;
	display: inline-block;
	border-radius: 100%;
	opacity: .2
}
.swiper-pagination-bullet-active {
	opacity: 1;
	background: #d9333f
}
.swiper-button-next,
.swiper-container-rtl .swiper-button-prev {
	background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23d9333f'%2F%3E%3C%2Fsvg%3E");
	right: 10px;
	left: auto
}
.swiper-button-prev,
.swiper-container-rtl .swiper-button-next {
	background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23d9333f'%2F%3E%3C%2Fsvg%3E");
	left: 10px;
	right: auto
}
