.old_list_content{
	width: 1180px;
	margin: 0 auto;
}
.content_head{
	width: 100%;
	height: 60px;
	overflow: hidden;
	line-height: 60px;
}
.content_head>span{
	font-size: 13.95px;
	font-weight: 500;
	top: 18px;
	float: left;
	margin-right: 3px;
}
.content_head a{
	text-decoration: none;
	float: left;
	margin-right: 3px;
}
.content_head>a>div{
	font-weight: 600;
	font-size: 13.95px;
	color: #1e1e1e;
}
.information_screen{
	width: 100%;
	height: 196px;
	background-color: #f2f2f2;
	padding: 0 20px;
	box-sizing: border-box;
}
.information_screen .buttom_border{
	height: 48px;
	border-bottom: 1px solid #e7e7e7;
	overflow: hidden;
}
.information_screen div p{
	height: 23px;
	line-height: 23px;
	font-size: 14.26px;
	margin-right: 20px;
	float: left;
	margin-top: 13px;
}
.information_screen div span{
	height: 23px;
	width: 50px;
	line-height: 23px;
	text-align: center;
	display: inline-block;
	font-size: 12.53px;
	float: left;
	margin-right: 20px;
	margin-top: 13px;
}
.more{
	height: 23px;
	width: 50px;
	line-height: 23px;
	text-align: center;
	display: inline-block;
	font-size: 12.53px;
	float: right;
	margin-right: 20px;
	margin-top: 13px;
}



.click_asctive_span{
	background-color: #fd0202;
	color: white;
}
/*车辆列表*/
.old_car_list_title{
	width: 100%;
	margin: 0 auto;
	padding: 17px 0 20px 0;
	overflow: hidden;
}
.old_car_list_title_span{
	float: left;
	font-size: 13.57px;
	font-weight: 500;
	border: 2px solid #9a9a9a;
	border-radius: 5px;
	color: #3f3f3f;
	display: inline-block;
	width: 98px;
	height: 30px;
	text-align: center;
	line-height: 30px;
}
.old_car_list_title_span>img{
	height: 14px;
	position: relative;
	top: 2px;
	margin-left: 2px;
}
.old_car_allnum{
	float: right;
	font-size: 14.62px;
	padding: 10px;
	text-decoration: none;
	color: #222222;
}
.sel_div{
	overflow: hidden;
	position: relative;
	
}
.information_screen select {
  /*Chrome和Firefox里面的边框是不一样的，所以复写了一下*/
  float: left;
  margin-right: 20px;
  margin-top: 13px;
  background-color: #f2f2f2;
  border: 2px solid #9a9a9a;
  border-radius: 5px;
  font-size: 13.57px;
  font-weight: 500;
  width: 80px;
  height: 25px;
  line-height: 25px;

  /*很关键：将默认的select选择框样式清除*/
  /*appearance:none;
  -moz-appearance:none;
  -webkit-appearance:none;*/

  /*在选择框的最右侧中间显示小箭头图片*/
  /*background: url("http://ourjs.github.io/static/2015/arrow.png") no-repeat scroll right center transparent;*/

  outline: none;
  /*为下拉小箭头留出一点位置，避免被文字覆盖*/

}
.sel_div .hr1,.sel_div .hr2{
	position: absolute;
	height: 25px;
	width: 2px;
	background-color: #9a9a9a;
}
.sel_div .hr1{
	top: 13px;
	left: 60px;
}
.sel_div .hr2{
	top: 13px;
	left: 160px;
}


/*清除ie的默认选择框样式清除，隐藏下拉箭头*/
select::-ms-expand { display: none; }


/*车辆列表*/
.old_car_list{
	width: 1180px;
	margin: 0 auto;
	overflow: hidden;
}
.old_car_list_xq{
	width: 288px;
	float: left;
	margin-bottom: 3px;
	background-color: #f5f5f5;
	border: 2px solid white;
}
.old_car_list_xq img{
	width: 100%;
	height: 288px;
	border: 0;
}
.old_car_list a{
	text-decoration: none;
}
.line_div>.old_car_list_xq:nth-child(1),
.line_div>.old_car_list_xq:nth-child(2),
.line_div>.old_car_list_xq:nth-child(3)
{
	margin-right: 4px;
}
.old_car_list_xq:hover{
	border: 2px solid #e83f00;
}
.old_car_list_xq p{
	display: block;
	width: 100%;
	overflow: hidden;
	padding: 0 10px;
	box-sizing: border-box;
}
.oldallcar_model{
	font-size: 15px;
	margin: 2px 0;
	color: #323232;
}
.oldallcar_mileage{
	font-size: 12px;
	color: #9e9e9e;
}
.oldallcar_price{
	margin: 4px 0;
	font-size: 16px;
}
.oldallnew_price{
	color: #ff0014;
}
.oldallold_price{
	margin-left: 35px;
	color: #ababab;
	font-size: 12px;
}
.line_div:nth-child(1){
	overflow: hidden;
}
.page_num{
	width: 406px;
	height: 42px;
	margin: 48px auto;
	overflow: hidden;
}
.page_num>span{
	float: left;
	border: 1px solid #b8b8b8;
	display: inline-block;
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
}
.page_num .page_num_spanleft{
	margin-right: 10px;
	color: #b8b8b8;
}
.page_num .page_num_ul li{
	width: 40px;
	height: 40px;
	list-style: none;
	float: left;
	line-height: 40px;
	text-align: center;
	margin-right: 10px;
	border: 1px solid #b8b8b8;
}
.page_num .page_num_ul li:nth-child(1){
	background-color: #e83f00;
	border: 1px solid #e83f00;
	color: white;
}
