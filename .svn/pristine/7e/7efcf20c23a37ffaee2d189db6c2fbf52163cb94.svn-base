html,
body{
    /*min-width: 320px;
    max-width: 640px;*/
    margin: 0 auto;
    width: 100%;
    height: 100%;
    font-family: Arial,"微软雅黑";
}
ul,li,p,h1,h2,h3,h4,h5,h6,img,br,hr,table,tr,td,dl,dt,dd,form {
    margin: 0;
    padding: 0;
}

ul,li {
    list-style: none;
}
img {
    border: none;
    width: 100%;
    height: 100%;
}
a {
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
}
h1{
    font-size: 0.3rem;
    text-align: center;
    padding: 0.3rem 0rem;
}
