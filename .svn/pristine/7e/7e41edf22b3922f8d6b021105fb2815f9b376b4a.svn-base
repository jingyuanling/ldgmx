html,body{
    width: 100%;
    min-width: 320px;
    max-width: 640px;
    margin:0 auto;
    background-color: #f8f8f8;
}
body{
    font-family: Tahoma,Arial,"Droid Sans","Helvetica Neue","微软雅黑","Heiti SC",sans-self;
    
    
}
*{
    margin:0px;
    padding: 0px;
}

.searchbox{
    margin-left: 30px;
    margin-right: 30px;
    height:35px;
}
.form-control{
    width: 100%;
    height: 28px;
    border:1px solid #c7c5c5;
    float: left;
    border-radius: 3px;
    margin-top: 5px;
    margin-right: 30px;
    background-color: #fff;
}
.search{
    width: 29px;
    height: 28px;
    background-color: #f8f8f8;
    margin-top: -29px;
    float: right;
    margin-right: -1px;
    border-left:1px solid #c7c5c5;
    border-radius:0 3px 3px 0;
}
.hot{
    margin-top: 5px;
    border-top: 1px solid #d9d7d7;
    border-bottom: 1px solid #d9d7d7;
    width: 100%;
    height: 74px;
}
.tit{
    float: left;
    width: 30px;
    height: 30px;
    padding:10px 5px 0 5px;
    font-size: 15px;
    color: #000;
}
.lei{
    float: left;
    width: 75%;
    height: 54px;
    margin-right:30px;
    margin-top: 10px;

}
.clearfix:after{
    clear:both;
    height:0;
    line-height:0;
    font-size:0;
    margin:0;
    padding:0;
}
.list li{
    border:1px solid #d9d7d7;
    border-radius: 10px;
    width: 25%;
    height: 20px;
    font-size: 12px;
    color: #000;
    list-style: none;
    margin-left:15px; 
    float: left;
    line-height: 20px;
    text-align: center;
    margin-bottom: 10px;
    background-color: #fff;
}
.history p{
    font-size: 15px;
    color: #000;
    float: left;
    margin-left: 5px;
    margin-top: 10px;
}
.history li{
    list-style: none;
    height: 35px;
    line-height: 35px;
    border-bottom: 1px solid #d9d7d7;
    margin-left: 55px;
}
.history a{
    text-decoration: none;
}
.history span{
    font-size: 14px;
    color: #a7a6a6;
}
.qing{
    width: 240px;
    height: 45px;
    border:1px solid #c7c5c5;
    border-radius: 4px;
    background-color: #fff;
    margin:0 auto;
    text-align: center;
    height: 45px;
    line-height: 45px;
    margin-top: 20px;
}
.qing a{
    text-decoration: none;
    color: #000;
}
.close{
    margin:auto;
    margin-top:-240px;
    z-index:3;border: 1px solid #d7d7d7;
    border-radius: 6px;
    background-color:#fff;
    padding:0px;
    display:none;
    width:200px;
    height:150px;
    text-align:right;

}
.che{
    text-align:center;
    margin-top:10px;
    border-bottom:1px solid #d7d7d7;
    line-height: 90px;
}
.but li{
    width: 99px;
    height: 48px;
    border-right: 1px solid #d7d7d7;
    float: left;
    list-style: none;
}
.but a{
    height: 48px;
    line-height: 48px;
    text-align: center;
    color: black;
    text-decoration: none;
    margin-right: 33px;
}
.but li.right{
    border-right: none;
}
