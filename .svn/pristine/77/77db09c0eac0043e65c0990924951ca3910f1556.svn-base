html{
	width: 100%;
	height: 100%;
}
.bring_gist_wrap{
	width: 100%;
	height: 100%;
	background: url(../img/bg_big.png) 0 0 no-repeat;
	background-size: 100% 100%;
	position: relative;
}
.top_hide{
	width: 100%;
	height: 5%;
	background-color: #ffa2ad;
	-moz-box-shadow: 0px 0px 0.2em #6d6d6d; /* 老的 Firefox */
	box-shadow: 0px 0px 0.2em #6d6d6d;
	font-size: 0.2em;
	text-align: center;
	color: white;
	line-height: 2.6em;
}
.flashing_hand{
	position: absolute;
	width: 0.6em;
	top: 0.23em;
	left: 75%;
	animation: flash 1.3s infinite;
}
.title_img{
	width: 6em;
	height: 10%;
	margin: 0 auto;
	margin-top: 0.4em;
}
.title_img img{
	height: 100%;
    margin: 0 auto;
}
.top_text{
	width: 6.3em;
	height: 15%;
	margin: 0 auto;
	margin-top: 0.2em;
}
.top_text p{
	font-size: 0.5em;
	text-align: center;
	color: white;
	font-family: "微软雅黑";
	font-weight: 800;
	line-height: 1.3em;
}
.top_text .p2{
	font-size: 0.35em;
}
.not_open_box{
	width: 100%;
	height: 31%;
	margin-top: 0.2em;
}
.not_open_box img{
	margin: 0 auto;
	height: 100%;
}
.iwant_bringbox{
	width: 100%;
	height: 22%;
	background: url(../img/bg_small.png) 0 0 repeat;
	background-size: 100% 100%;
	padding: 0.2em 0 0.1em 0;
	margin-top: 0.2em;
}
.iwant_bringbox a img{
	width: 3.0em;
	margin: 0 auto;
}
.iwant_bringbox .winners_p{
	text-align: center;
}
.iwant_bringbox .winners_p a{
	color: white;
	font-size: 0.35em;
	font-family: "微软雅黑";
}
.footer{
	width: 100%;
	height: 7%;
	font-size: 0.2em;
	color: white;
	line-height: 3em;
	text-align: center;
	font-family: "微软雅黑";
}
/*上下晃动手势*/
.SX_hand{
	height: 11%;
	margin-top: -3%;
}
.SX_hand .shousx{
	width: 0.6em;
	margin: 0 auto;
	margin-bottom: 0.2em;
	animation: bounce 0.5s infinite;
}
.SX_hand .SX_hand_p{
	font-size: 0.3em;
	color: white;
	text-align: center;
}
/*规则*/
.rules_wrap{
	width: 100%;
	max-width: 640px;
	min-width: 320px;
	height: 0;
	/*padding: 0.5em 0 0 0;*/
	background-color: #ffffff;
	box-sizing: border-box;
	overflow: hidden;
	position: absolute;
	top: 0;
}
.rules_content{
	width: 100%;
}
.rules_title{
	width: 6.3em;
	margin: 0 auto;
}
.rules_title p{
	font-size: 0.4em;
	font-family: "微软雅黑";
	text-align: center;
}
.rules_details{
	width: 6.3em;
	margin: 0 auto;
	margin-top: 0.8em;
}
.rules_details p{
	font-size: 0.3em;
	margin-bottom: 1.0em;
	line-height: 1.8em;
	font-family: "微软雅黑";
}
.rules_bottom{
	width: 100%;
	height: 2.5em;
	background-color: #fb88a5;
	font-size: 0.3em;
	text-align: center;
	color: white;
	line-height: 2.5em;
	font-family: "微软雅黑";
	position: absolute;
	bottom: 0;
}
/*礼盒上方文本*/
.top_text1{
	height:8%;
}
