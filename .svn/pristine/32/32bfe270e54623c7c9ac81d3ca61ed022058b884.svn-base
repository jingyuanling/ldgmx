
.bg{
    width: 100%;
    height: 100%;
    background: url(../img/bg.jpg)  no-repeat center;
    background-size: 100%;
}
.gift{
    width: 100%;
    height: 65%;
    position: relative;
}
.gift img{
    width: 100%;
    height: 75%;
    display: block;
    position: absolute;
    margin: auto;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.button{
    display: block;
    width: 100%;
    height: 15%;
}
.button img{
    width: 100%;
    height: 90%;
}
.info{
    text-align: center;
    color: #fff;
    font-size: 0.28rem;
    line-height: 0.44rem;
}
.info span{
    color: #FFF45C;
}
.btm_rules_box{
	width: 100%;
}
.btm_rules_box>div{
	float: left;
	width: 50%;
	box-sizing: border-box;
}
.btm_rules_box .btm_rules{
	text-align: right;
	padding-right: 0.25em;
}
.btm_rules_box .btm_box{
	text-align: left;
	padding-left: 0.25em;
}
.btm_rules_box .btm_rules>img{
	width: 2em;
}
.btm_rules_box .btm_box>img{
	width: 2.4em;
}
