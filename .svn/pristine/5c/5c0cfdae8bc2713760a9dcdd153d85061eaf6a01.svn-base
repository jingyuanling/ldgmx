.add-clerk-wrap{
	width: 100%;
	height: 100%;
	padding-top: 0.88rem;
	padding-bottom: 1.1rem;
	overflow-y: scroll;
}
.add-clerk-wrap li{
	width: 100%;
	height: 1.8rem;
	overflow: hidden;
	padding: 0 0.3rem;
	border-bottom: 0.01rem solid #ececec;
}
.clerk-portrait{
	height: 100%;
	float: left;
	padding-top: 0.29rem;
	margin-right: 0.3rem;
}
.clerk-portrait img{
	width: 1.22rem;
	height: 1.22rem;
}
.clerk-introduce{
	padding-top: 0.4rem;
}
.clerk-introduce .clerk-name{
	font-size: 0.34rem;
	color: #666666;
	margin-bottom: 0.2rem;
	letter-spacing: 0.09rem;
}
.clerk-introduce  .open-role{
	font-size: 0.3rem;
	color: #d60303;
	display: inline-block;
	width: 4.2rem;
	white-space: nowrap;
	overflow: hidden;
}
.clerk-introduce  .open-role span{
	margin-right: 0.1rem;
}
