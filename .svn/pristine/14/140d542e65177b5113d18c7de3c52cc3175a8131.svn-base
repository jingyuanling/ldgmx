*{
	margin: 0;
	padding: 0;
}
body{
	font-family: "微软雅黑";
}
img{
	border:0;
}
.top_wrap{
	border-bottom: 3px solid #ff4500;
}
.top_title{
	width:100%;
	height: 30px;
	background-color: #e4e4e4;
}
.top_title_center{
	width: 1180px;
	margin: 0 auto;
}
.top_title img{
	margin-top: 3px;
}
.top_content{
	width: 1180px;
	height: 170px;
	margin: 0 auto;
	position: relative;
}
.top_logo_img{
	position: absolute;
	top: 36px;
	left: 0;
	width: 215px;
	height: 60px;
}
.top_title_inp{
	position: absolute;
	padding-left: 10px;
	top: 58px;
	left: 325px;
	height: 33px;
	width: 305px;
	border: 2px solid #ff4500;
	outline: none;
}
.search{
	height: 37px;
	width: 84px;
	background-color: #FF4500;
	color: white;
	line-height: 37px;
	text-align: center;
	font-size: 20px;
	position: absolute;
	left: 640px;
	top: 58px;
	font-weight: 500;
}
.top_map{
	position: absolute;
	right: 0;
	top: 24px;
	height: 139px;
}
.top_content_bottom{
	width: 100%;
	height: 44px;
	overflow: hidden;
	position: absolute;
	bottom: 0;
	/*border: 1px solid blue;*/
}
.top_content_bottom>ul{
	height: 100%;
}
.top_content_bottom ul a{
	text-decoration: none;
	line-height: 44px;
	display: inline-block;
	height: 100%;
	width: 100%;
	color: #606167;
	font-weight: 500;
}

.top_content_bottom ul li:nth-child(1){
	list-style: none;
	height: 100%;
	float: left;
	width: 210px;
	text-align: center;
}
.top_content_bottom ul li:nth-child(2),
.top_content_bottom ul li:nth-child(3){
	list-style: none;
	height: 100%;
	float: left;
	width: 115px;
	text-align: center;
}
