.wine_details_box{
    width: 100%;
    background-color: #f0f0f2;
    margin:0 auto;
}
.wine_main_top{
    width: 100%;
    height: 39px;
    background-color: #d9333f;
}
.wine_main_top img{
    position: absolute;
    float: left;
    width: 10px;
    margin-top: 10px;
    margin-left: 13px;

}
.wine_main_top img.serch{
    position: relative;
    float: right;
    width: 18px;
    margin-top: -28px;
    margin-right: 13px;

}
.wine_main_top p{
    width: 100%;
    letter-spacing: 2px;
    font-size: 14px;
    color: #fff;
    text-align: center;
    line-height:39px;
}
.wine_main_top p span{
    float: left;
    display: block;
    width: 30%;
    text-align: center;
}
.wine_main_top p span.s1{
    margin-left: 20%;
    color: #fff;
}
.wine_main_top p span i{
    display: block;
    margin-top: -5px;
    text-align:center;
    position: relative;
    left: 50%;
    margin-left: -23px;
    width: 45px;
    border-bottom: 2px solid #fff;
}
.wine_main_top p span.s2{
    margin-right: 20%;
}
.wine_pingjia .pingjia-tit{
    width: 100%;
    padding-left: 5px;
    padding-right: 5px;
    height: 40px;

}
.wine_pingjia .pingjia-tit li{
    border-bottom: 1px solid #d4d2d2;
    width: 24%;
    height: 40px;
    float: left;list-style: none;
    text-align: center;
    line-height: 40px;
    color: #000;
    border-right: 1px solid #d4d2d2;
}
.wine_pingjia .pingjia-tit li.right{
    border-right: none;
}
.wine_pingjia .pingjia-tit li.active{
    color: red;
    border-bottom: 1px solid red;

}
.wine_pingjia-cont{
    width: 100%;
    padding:15px;
    font-size: 14px;
    color: #363636;
}
.wine_pingjia-cont p span{
    display: block;
    float: left;
    line-height: 30px;
}
.wine_pingjia-cont p span.touxiang{
    width: 30px;
    height: 30px;
    border-radius: 50%;
}
.wine_pingjia-cont p span.touxiang img{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.wine_pingjia-cont p span.name{
    margin-left:10px;
}
.wine_pingjia-cont p.text{
    margin-top:10px;
    line-height: 25px;
}
.wine_pingjia-cont p.zan span{
    float: right;
    margin-top: -30px;

    margin-right: 14px;
}
.wine_pingjia-cont p.zan img{
    float: right;
    margin-right: 30px;
    
}
.wine_pingjia-cont p.zt{
    margin-top: 10px;
}
.wine_pingjia-cont p.kefu{
    background-color: #fff;
    line-height: 23px;
}
.wine_pingjia-cont p.kefu span.ktouxiang{
    width: 20px;
    height: 20px;
    background-color: red;
    border-radius: 50%;
    margin-right: 5px;
}
.wine_pingjia-cont p.kefu span.red{
    display: block;
    color: red;
    line-height: 20px;
}
.wine_evealuate_XJ img{
	width: 0.9em;
	float: left;
}
.wine_evealuate_XJ{
	display: inline-block;
	width: 5em;
	overflow: hidden;
}
