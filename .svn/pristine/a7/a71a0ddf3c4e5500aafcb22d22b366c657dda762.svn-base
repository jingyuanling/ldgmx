body{
    width: 100%;
    min-width: 320px;
    max-width: 640px;
    margin: 0 auto;
    font-family: "微软雅黑";
}
html{
    width: 100%;
    min-width: 320px;
    max-width: 640px;
    margin: 0 auto;
}

img{
  border:0;
  display: block;
}
.clearfix:after {
visibility: hidden;
display: block;
font-size: 0;
content: " ";
clear: both;
height: 0;
}
.details-box{
    width: 100%;
    background-color: #f0f0f2;
    margin:0 auto;
}
.main-top{
    width: 100%;
    height: 39px;
    background-color: #548e11;
}
.main-top img{
    position: absolute;
    float: left;
    width: 10px;
    margin-top: 10px;
    margin-left: 13px;

}
.main-top img.serch{
    position: relative;
   /* position: absolute;*/
    float: right;
    width: 18px;
    margin-top: -28px;
    margin-right: 13px;

}
.main-top p{
    width: 100%;
    letter-spacing: 2px;
    font-size: 14px;
    color: #fff;
    text-align: center;
    line-height:39px;
}
.main-top p span{
    float: left;
    display: block;
    width: 30%;
    text-align: center;
}
.main-top p span.s1{
    margin-left: 20%;
    color: #fff;
}
.main-top p span i{
    display: block;
    margin-top: -5px;
    text-align:center;
    position: relative;
    left: 50%;
    margin-left: -23px;
    width: 45px;
    border-bottom: 2px solid #fff;
}
.main-top p span.s2{
    margin-right: 20%;
}
.pingjia .pingjia-tit{
    width: 100%;
    padding-left: 5px;
    padding-right: 5px;
    height: 40px;

}
.pingjia-tit li{
    border-bottom: 1px solid #d4d2d2;
    width: 24%;
    height: 40px;
    float: left;list-style: none;
    text-align: center;
    line-height: 40px;
    color: #000;
    border-right: 1px solid #d4d2d2;
}
.pingjia-tit li.right{
    border-right: none;
}
.pingjia-tit li.active{
    color: red;
    border-bottom: 1px solid red;

}
.pingjia ul{
    display: none;
}
.pingjia ul.pingjia-cont{
    display: block;
    width: 100%;
    padding:15px;
    font-size: 14px;
    color: #363636;
}
.xianshi{
    display: block;
}
.pingjia-cont p span{
    display: block;
    float: left;
    line-height: 30px;
}
.pingjia-cont p span.touxiang{
    width: 30px;
    height: 30px;
    background-color: red;
    border-radius: 50%;
}
.pingjia-cont p span.name{
    margin-left:10px;
}
.pingjia-cont p.text{
    margin-top:10px;
    line-height: 25px;
}
.pingjia-cont p.zan span{
    float: right;
    margin-top: -30px;

    margin-right: 14px;
}
.pingjia-cont p.zan img{
    float: right;
    margin-right: 30px;
    
}
.pingjia-cont p.zt{
    margin-top: 10px;
}
.pingjia-cont p.kefu{
    background-color: #fff;
    line-height: 23px;
}
.pingjia-cont p.kefu span.ktouxiang{
    width: 20px;
    height: 20px;
    background-color: red;
    border-radius: 50%;
    margin-right: 5px;
}
.pingjia-cont p.kefu span.red{
    display: block;
    color: red;
    line-height: 20px;
}