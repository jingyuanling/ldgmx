body{
	background:#ededed;
}
.chuli{
	width: 100%;
	position: relative;
	max-width: 640px;
	min-width: 320px;
	overflow: hidden;
	margin: 0 auto;
	font-size: 16px;
	padding-bottom: 60px;
}
.ctime{
	text-align: center;
	padding:20px 0 15px;
	color:#666;
}
.ctime span{
	border-radius: 20px;
	background:#fff;
	padding:2px 10px;
}
.liaotiankuang{
	width:95%;
	margin:auto;
	padding:14px 8px;
	border-radius: 5px;
	background:#fff;
}
.liaotiankuang dt{
	border-bottom:1px solid #999;
	padding-bottom:8px;
	margin-bottom:8px;
}
.liaotiankuang dd{
	font-size:14px;
	line-height:20px;
	color:#4d4d4d;
}
.liaotiankuang dd p{
	margin-bottom:5px;
}
.bianhao{
	border-top:1px solid #fff;
	font-size:14px;
	line-height:24px;
}
.juse{
	background:#f18346;
}
.juse dl *{
	color:#fff;
}
.juse dl dt{
	border-bottom:1px solid #fff;
}
.bottombut{
	width:100%;
	height:50px;
	position:fixed;
	bottom:0;
	padding:5px 0;
	background:#fff;
	max-width: 640px;
	min-width: 320px;
}
.gisn{
	width:80%;
	margin:auto;
	height:40px;
}
.bottombut a{
	padding:0 20px;
	border:1px solid #999;
	border-radius: 5px;
	display:inline-block;
	height:30px;
	line-height:28px;
	margin-top:5px;
}
.bottombut .righttext{
	float:right;
}
.footer{
	line-height: 12px;
	font-size: 12px;
}
