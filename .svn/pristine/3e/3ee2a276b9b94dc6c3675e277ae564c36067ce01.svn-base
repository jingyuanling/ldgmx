body{
	background-color: #f4f5f9;
}
.CZQ_class_wrap{
	width: 100%;
	height: 100%;
	overflow: hidden;
	padding-top: 46px;
}
.CZQ_class_wrap_left{
	width: 25%;
	height: 100%;
	background-color: white;
	float: left;
}
.CZQ_class_wrap_right{
	width: 75%;
	height: 100%;
	float: right;
	padding: 0.8em;
}
.CZQ_class_wrap_left_ul li{
	text-align: center;
	padding: 0.5em 0;
}
.CZQ_class_wrap_left_ul li img{
	margin: 0 auto;
	width: 30%;
	margin-bottom: 0.5em;
}
.CZQ_class_wrap_left_ul li span{
	font-size: 1.0em;
	display: inline-block;
	padding-bottom: 0.5em;
}
.span_active{
	border-bottom: 1px solid #e2101c;
}
.CZQ_class_wrap_right_title{
	height: 2em;
	padding-left: 1.5em;
	position: relative;
	font-size: 1.2em;
	line-height: 2em;
}
.CZQ_class_point{
	width: 0.5em;
	height: 0.5em;
	background-color: #e2101c;
	border-radius: 50%;
	position: absolute;
	top: 50%;
	margin-top: -0.25em;
	left: 0;
}
.CZQ_class_wrap_right_content span{
	font-size: 1em;
	margin-right: 0.5em;
	border: 1px solid transparent;
}
