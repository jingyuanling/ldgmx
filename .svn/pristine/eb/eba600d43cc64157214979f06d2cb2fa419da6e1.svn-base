.hall-list-ul li{
	width: 2.16rem;
	margin-right: 0.31rem;	
	float: left!important;
}
.hall-list-img, .hall-list-img img{
	width: 2.16rem;
	height: 3.83rem;
}
.hall-list-ul li:nth-child(3n){
	margin-right: 0;
}
.hall-list-ul .description{
	font-size: 0.18rem;
}
.hall-list-ul .down-num span{
	font-size: 0.16rem;
}
.hall-list-ul .down-num .glyphicon{
	font-size: 0.27rem;
}
.hall-list-ul .down-num{
	position: relative;
}
.hall-list-ul .down-num .right_label{
	position: absolute;
	font-size: 0.14rem;
	bottom: 0.02rem;
	right: 0;
	display: inline-block;
    width: 1.05rem;
    overflow: hidden;
    white-space: nowrap;
    text-align: center;
}
.hall-list-ul .hall-theme .theme-p{
	height: 0.38rem;
	top: 0;
	font-size: 0.14rem;
    line-height: 0.38rem;
    overflow: hidden;
    display: inline-block;
    position: absolute;
    top: 0;
    padding: 0 0.1rem;
    width: 1.5rem;
}
.hall-list-ul .hall-theme{
	position: relative;
}
