@charset "utf-8";

body {
    width: 100%;
    min-width: 320px;
    max-width: 640px;
    margin: 0 auto;
    font-family: "微软雅黑";
}
*{
    margin:0;
    padding:0;
}
img{
  border:0;
  display: block;
}
.clearfix:after {
visibility: hidden;
display: block;
font-size: 0;
content: " ";
clear: both;
height: 0;
}
.xrhb-tankuangceng{
    width: 100%;
    height: 100%;
    min-width: 320px;
    max-width: 640px;
    background-color:rgba(0,0,0,0.5);
    position: fixed;
}
.xrhb-tankuang{
    width: 15em;
    height: 15em;
    background-color: red;
    margin:0 auto;
    top: 50%;
    margin-top: -7em;
    position: relative;
    background:url(../img/xrhbsh.png) no-repeat 0 0;
    background-size: 15em 15em;
}
.xrhb-tankuang p{
    width: 10em;
    height: 1em;
    margin-left: 2.5em;
    margin-top: 4.8em;
    position: absolute;
    color: #fff;
    font-weight: 900;
   
    text-align: center;
}
.xrhb-tankuang p.p2{
    width: 10em;
    height: 1.3em;
    margin-left: 3.5em;
    margin-top: 9.5em;
    position: absolute;
    color: #da4e3f;
    font-size:0.9em;
    font-weight: 900;
    text-align: center;
   
    }

