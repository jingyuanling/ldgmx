body{
	background-color: #f3f5f7;
}
.wine_all_class_help-box{
    width: 100%;
    height: 100%;
}
.wine_class_goods_list{
	display: flex;
    flex-wrap: wrap;
    padding-top: 39px;
}
.wine_class_goods_list li{
	width: 29%;
	margin-left: 3.3%;
	margin-top: 1.2em;
	border: 1px solid #d7d7d7;
}
.wine_class_name{
	width: 100%;
	font-size: 0.8em;
	text-align: center;
	line-height: 2.0em;
	background-color: #f0f0f0;
	border-top: 1px solid #d7d7d7;
}
.wine_class_goods_list li img{
	width: 100%;
}
