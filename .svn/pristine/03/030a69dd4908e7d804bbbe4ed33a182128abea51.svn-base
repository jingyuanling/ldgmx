.add-card-wrap{
	width: 100%;
	height: 100%;
	padding-top: 0.88rem;
	padding-bottom: 1.1rem;
	overflow-y: scroll;
}
.add-card-ul{
	padding: 0.3rem;
}
.add-card-ul li{
	margin-bottom: 0.18rem;
	border-radius: 0.06rem;
	background-color: #628dc1;
	width: 100%;
	height: 2.2rem;
	overflow: hidden;
	padding: 0 0.28rem;
	color: white;
}
.add-card-ul .bank-logo{
	width: 0.57rem;
	height: 100%;
	float: left;
	margin-right: 0.2rem;
	padding-top: 0.35rem;
	padding-bottom: 1.1rem;
}
.add-card-ul .bank-logo img{
	width: 100%;
}
.add-card-ul .bank-content{
	float: left;
	padding-top: 0.35rem;
}
.bank-content .name-p1{
	font-size: 0.29rem;
	margin-bottom: 0.07rem;
}
.bank-content .card-type{
	font-size: 0.24rem;
	margin-bottom: 0.1rem;
}
.bank-content .card-num{
	font-size: 0.56rem;
}
.bank-content .card-num span{
	margin-right: 0.15rem;
}
