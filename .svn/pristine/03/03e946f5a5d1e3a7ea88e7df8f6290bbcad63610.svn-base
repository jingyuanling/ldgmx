body{
	background-color: #ffffff;
	font-family: "微软雅黑";
}
::-webkit-scrollbar{
  display:none;
}
/*head*/
.life_home_nav{
	width: 100%;
	background-color: #d9333f;
	height: 1rem;
	position: fixed;
	max-width: 750px;
	min-width: 320px;
	z-index: 99;
}
.life_home_nav div{
	position: absolute;
}
.life_home_nav_inp{
    width: 5rem;
    left: 19%;
	height: 0.64rem;
	top: 0.18rem;
}
.life_home_nav_inp input{
	width: 100%;
	height: 100%;
	position: absolute;
	border-radius: 0.05rem;
	border: 0;
	padding-left: 0.7rem;
	box-sizing: border-box;
	background-color: #c3161e;
	color: #FFFFFF;
	font-size: 0.28rem;
	outline: none;
}
.life_home_nav_inp img{
	position: absolute;
	width: 0.27rem;
	height: 0.27rem;
	top: 0.18rem;
	left: 0.22rem;
}
.life_nav_left{
	height: 0.46rem;
    width: 1.26rem;
	left: 0;
	top: 0.27rem;
	line-height: 0.46rem;
	padding: 0 3%;
	font-size: 0.38rem;
	color: white;
    box-sizing: border-box;
    overflow:hidden;
    text-align:center;
}
.life_home_nav_right{
	right: 3%;
	width: 1rem;
    height: 0.62rem;
    top: 0.19rem;
    text-align: center;
    line-height: 0.62rem;
    overflow: hidden;
}
.life_home_nav_right a{
	font-size: 0.38rem;
    color: white;
    display: block;
}
.life_home_nav_right img{
	width: 0.58rem;
	height: 100%;
	float: right;
}
.life_home_nav_right .home_nav_right_map{
	height: 0.58rem;
	width: 0.39rem;
}
.life_home_nav_inp2{
	position: relative;
}
.life_home_nav_inp2 input{
	padding-right: 0.64rem;
	background-color: #e6e6e6;
	color: #666666;
	border: none;
}
.life_home_nav_inp_right{
	width: 0.64rem;
    height: 0.64rem;
    right: 0;
    top: 0;
    border-left: 0.01rem solid #d5d3d3;
    color: #D5D3D3;
    font-size: 0.4rem;
    text-align: center;
    line-height: 0.64rem;
}
.life_home_nav2{
	background-color: #FFFFFF;
}
.life_home_nav2 .life_nav_left{
	color: #666666;
	background-color: #FFFFFF;
	position: relative;
}
.life_nav_left .life_home_triangle_small{
	width: 0.1rem;
	height: 0.11rem;
	position: absolute;
	right: 0;
	bottom: 0;
}
.life_nav_left .img1{
    height: 0.4rem;
    width: 0.5rem;
    margin-top: 0.03rem;
}
.life_nav_left .img2 {
    height: 0.42rem;
    width: 0.22rem;
    margin-top: 0.02rem;
}
.life_home_nav_center{
    width: 3.8rem;
    height: 100%;
    font-size: 0.38rem;
    text-align: center;
    left: 50%;
    margin-left: -1.9rem;
    line-height: 1rem;
    color: white;
    letter-spacing: 4px;
}
/*foot*/
.life_bottom{
	width: 100%;
	height: 1rem;
	overflow: hidden;
	padding-top: 0.1rem;
	position: fixed;
	bottom: 0;
	max-width: 750px;
	min-width: 320px;
	z-index: 101;
	background-color: #ffffff;
	border-top: 1px solid #e9e9e9;
}
.life_bottom_columns{
	float: left;
	width: 25%;
	text-align: center;
	position: relative;
	font-size: 0;
}
.life_bottom_columns img{
	margin: 0 auto;
	height: 0.4rem;
	width: 0.4rem;
}
.life_bottom_columns p{
	display: inline-block;
	width: 100%;
	color: #9d9d9d;
	font-size: 0.25rem;
	line-height: 0.6rem;
}
.life_border_right{
	position: absolute;
	height: 0.8rem;
    width: 0.01rem;
	right: 0;
	top: 0;
	border-right: 0.01rem solid #9d9d9d;
}
.life_bottom_columns .life_bottom_deep{
	color: #222222;
}
