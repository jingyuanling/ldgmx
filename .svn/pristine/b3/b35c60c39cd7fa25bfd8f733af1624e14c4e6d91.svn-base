*{
	margin: 0;
	padding: 0;
}

.big_shuffling{
	width: 100%;
	height: 300px;
    margin-bottom: 25px;			
}
.big_shuffling img{
	width: 100%;
	height: 100%;
}

.jxcx,.hot_new_car{
	width: 1180px;
	margin: 0 auto;
	padding-bottom: 15px;
	margin-bottom: 10px;
	overflow: hidden;
}
.jxcx_span,.hot_new_car_span{
	float: left;
	font-size: 24.54px;
	font-weight: 500;
}
.old_car_ckgd,.new_car_ckgd{
	float: right;
	font-size: 18.06px;
	padding: 10px;
	text-decoration: none;
	color: #e44815;
}

.hot_new_car{
	margin-top: 70px;
}

/*车辆列表*/
.vehicle_list,.hot_new_car_list{
	width: 1180px;
	margin: 0 auto;
	overflow: hidden;
}
.vehicle_list_xq,.hot_new_car_list_xq{
	width: 288px;
	float: left;
	margin-bottom: 3px;
	background-color: #f5f5f5;
	border: 2px solid white;
}
.vehicle_list_xq img,.hot_new_car_list_xq img{
	width: 100%;
	border: 0;
}
.vehicle_list a,.hot_new_car_list_xq a{
	text-decoration: none;
}
.vehicle_list_xq:nth-child(1),
.vehicle_list_xq:nth-child(2),
.vehicle_list_xq:nth-child(3),
.vehicle_list_xq:nth-child(5),
.vehicle_list_xq:nth-child(6),
.vehicle_list_xq:nth-child(7),
.hot_new_car_list_xq:nth-child(1),
.hot_new_car_list_xq:nth-child(2),
.hot_new_car_list_xq:nth-child(3),
.hot_new_car_list_xq:nth-child(7),
.hot_new_car_list_xq:nth-child(5),
.hot_new_car_list_xq:nth-child(6)
{
	margin-right: 4px;
}
.vehicle_list_xq:hover,.hot_new_car_list_xq:hover{
	border: 2px solid #e83f00;
}
.vehicle_list_xq p{
	display: block;
	width: 100%;
	overflow: hidden;
	padding: 0 10px;
	box-sizing: border-box;
}
.car_model,.newcar_model{
	font-size: 15px;
	margin: 2px 0;
	color: #323232;
}
.car_mileage{
	font-size: 12px;
	color: #9e9e9e;
}
.car_price,.newcar_price{
	margin: 4px 0;
	font-size: 16px;
}
.new_price{
	color: #ff0014;
}
.old_price{
	margin-left: 35px;
	color: #ababab;
	font-size: 12px;
}
.newcar_price{
	margin: 4px 0;
	font-size: 16px;
	color: #ff0014;
}

