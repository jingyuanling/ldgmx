body{
	background-color: #f3f5f7;
}
.wine_details_box{
    width: 100%;
    background-color: #f0f0f2;
    padding-top: 0.8rem;
}
.wine_main_top{
    width: 100%;
    height: 0.8rem;
    background-color: #d9333f;
    position: relative;
}
.wine_main_top img{
	position: absolute;
    height: 0.34rem;
    top: 0.23rem;
    left: 0.3rem;

}
.wine_main_top img.serch{
    position: relative;
    float: right;
    width: 18px;
    margin-top: -28px;
    margin-right: 13px;

}

.wine_pingjia .pingjia-tit{
    width: 100%;
	display: flex;
	padding: 0.15rem 0;
	justify-content: space-between;
	border-bottom: 0.01rem solid #d4d2d2;
	border-top: 0.01rem solid #d4d2d2;
	margin-top: 0.2rem;
}
.wine_pingjia .pingjia-tit li{
    width: 100%;
    float: left;list-style: none;
    text-align: center;
    color: #000;
    height: 0.5rem;
    font-size: 0.28rem;
    line-height: 0.5rem;
    border-right: 0.01rem solid #d4d2d2;
}
.wine_pingjia .pingjia-tit li.right{
    border-right: none;
}
.wine_pingjia .pingjia-tit li.active{
    color: #d9333f;
}
.wine_pingjia-cont{
    width: 100%;
    padding:15px;
    font-size: 14px;
    color: #363636;
    border-bottom: 0.01rem solid #d4d2d2;
}
.wine_pingjia-cont p span{
    display: block;
    float: left;
    color: #666666;
    font-size: 0.24rem;
}
.wine_pingjia-cont p span.touxiang{
    width: 0.65rem;
    height: 0.65rem;
    border-radius: 50%;
}
.wine_pingjia-cont p span.touxiang img{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.wine_pingjia-cont p span.name{
    margin-left:0.25rem;
    font-size: 0.28rem;
    display: block;
    height: 0.65rem;
    line-height: 0.65rem;
    color: #222222;
}
.wine_pingjia-cont span.wine_evealuate_XJ {
    margin-top: 0.2rem;
}
.wine_pingjia-cont p.text{
    color: #666666;
    font-size: 0.26rem;
    font-weight: 100;
    text-indent: 2em;
    font-family: "黑体";
}
.wine_pingjia-cont p.zan{
	position: relative;
	height: 0.28rem;
	top: -0.28rem;
	font-size: 0.24rem;
}
.wine_pingjia-cont p.zan span{
    position: absolute;
}
.wine_pingjia-cont p.zan span:nth-child(1){
	right: 1rem;
}
.wine_pingjia-cont p.zan span:nth-child(2){
	right: 0.3rem;
	font-size: 0.24rem;
	display: inline-block;
	line-height: 0.28rem;
}
.wine_pingjia-cont p.zan img{
    height: 0.28rem;
}
.wine_pingjia-cont p.zt{
    margin-top: 0.3rem;
    height: 0.28rem;
    line-height: 0.28rem;
}
.wine_pingjia-cont p.kefu{
    background-color: #fff;
    line-height: 23px;
}
.wine_pingjia-cont p.kefu span.ktouxiang{
    width: 20px;
    height: 20px;
    background-color: red;
    border-radius: 50%;
    margin-right: 5px;
}
.wine_pingjia-cont p.kefu span.red{
    display: block;
    color: red;
    line-height: 20px;
}
.wine_evealuate_XJ img{
	width: 0.2rem;
	margin-right: 0.03rem;
	float: left;
}
.wine_evealuate_XJ{
	display: inline-block;
	overflow: hidden;
}
.wine_pingjia{
	padding-bottom: 1rem;
	background-color: #F8F8F8;
}
