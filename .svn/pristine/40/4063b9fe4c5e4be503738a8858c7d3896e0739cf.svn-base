.life_home_wrap{
	padding-bottom: 0;
	background-color: #efefef;
}
.life_class_nav_wrap{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 50px;
	z-index: 10;
	max-width: 640px;
	min-width: 320px;
}
.life_class_nav{
	width: 100%;
	overflow: hidden;
	background-color: #ffffff;
	border-bottom: 1px solid #f0f0f0;
	max-width: 640px;
	min-width: 320px;
}
.life_class_nav_programa,.life_class_nav_address{
	font-size: 1.3em;
	width: 50%;
	float: left;
	text-align: center;
	line-height: 2em;
	position: relative;
}
.life_class_nav_programa span,.life_class_nav_address span{
	position: relative;
	color: #666666;
}
.life_class_nav_triangle{
	position: absolute;
	top: 50%;
	left: 100%;
	border-left: 0.3em solid transparent;
	border-top: 0.3em solid #666666;
    border-right: 0.3em solid transparent;
    border-bottom: 0.3em solid transparent;
}
.life_border_right{
	height: 1.1em;
}
.life_class_details_wrap{
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0.5);
	/*display: none;*/
}
.life_class_details{
	width: 100%;
	background-color: #f0f0f0;
	overflow: hidden;
	height: 20em;
}
.life_class_details_left_wrap,.life_class_details_right_wrap{
	width: 50%;
	float: left;
	height: 100%;
	overflow-y: scroll;
}
.life_class_details_left,.life_class_details_right{
	width: 100%;
}
.life_class_details_left ul li,.life_class_details_right ul li{
	font-size: 1.2em;
	padding-left: 6%;
	line-height: 2em;
	overflow: hidden;
}
.life_class_details_right_wrap{
	background-color: white;
	/*display: none;*/	
}
.home_good_recommend{
	margin-top: 3.2em;
}
.life_class_details_right li img{
	float: right;
	height: 1.0em;
	margin-top: 0.5em;
	margin-right: 0.5em;
}
/*点击事件的样式*/
.life_class_nav_programa span{
	color: #ff6b6a;
}
.life_class_nav_triangle{
	border-left: 0.3em solid transparent;
    border-top: 0.3em solid #ff6b6a;
    border-right: 0.3em solid transparent;
    border-bottom: 0.3em solid transparent;
}
