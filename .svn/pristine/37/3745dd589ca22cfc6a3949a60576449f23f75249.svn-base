.wine-wrap{
	padding: 1.05rem 0 0;
	height: 100%;
	overflow-y: scroll;
}
.balance-nav-tab{
	width: 100%;
    position: fixed;
    max-width: 750px;
    min-width: 320px;
    background-color: #ffffff;
    z-index: 2;
}
.balance-nav-tab tr {
    width: 100%;
    height: 0.81rem;
    border-bottom: 0.01rem solid #e5e5e5;
    font-size: 0.3334rem;
    color: #666666;
    line-height: 0.81rem;
    text-align: center;
}
.balance-nav-tab tr td{
	position: relative;
}
.balance-nav-tab tr .balance_nav_active{
    color: #d10000;
}
.balance-nav-tab tr .balance_nav_active .line-red{
	width: 1.04rem;
	height: 0.05rem;
	border-radius: 0.02rem;
	background-color: #d10000;
	position: absolute;
	bottom: 0;
	left: 50%;
	margin-left: -0.52rem;
}
.detail-list{
	width: 100%;
	padding: 0.81rem 0.37rem 0;
	background-color: #FFFFFF;
}
.detail-list li{
	height: 1.67rem;
	border-top: 0.01rem solid #e4e4e4;
}
.detail-list .left-instruce,.detail-list .right-amount{
	float: left;
	width: 50%;
	height: 100%;
}
.detail-list .left-instruce{
	padding: 0.4rem 0;
	display: flex;
    align-items: left;
    justify-content: space-around;
    flex-direction: column;
}
.detail-list .left-instruce .p1{
	font-size: 0.2916rem;
	color: #333333;
}
.detail-list .left-instruce .p2{
	font-size: 0.2499rem;
	color: #999999;
}
.detail-list .right-amount{
	text-align: right;
	line-height: 1.67rem;
	font-size: 0.3124rem;
}
.detail-list .income{
	color: #d10000;
}
.detail-list .spend{
	color: #333333;
}
