.order-manage-wrap{
	width: 100%;
	height: 100%;
	padding-top: 0.88rem;
	padding-bottom: 1.3rem;
	overflow-y: scroll;
}
.order-manage-tit{
	height: 1rem;
	line-height: 1rem;
	padding: 0 0.6rem;
	display: flex;
	justify-content: space-between;
}
.order-manage-tit span{
	display: block;
	height: 0.8rem;
	font-size: 0.3543rem;
	color: #666666;
}
.order-manage-tit .click_span{
	color: #d60303;
	border-bottom: 0.02rem solid #d60303;
}
.order-manage-ul{
	border-top: 0.02rem solid #ececec;
}
.order-manage-ul li{
	padding: 0.29rem 0.6rem;
	border-bottom: 0.02rem solid #ececec;
	overflow: hidden;
	height: 1.81rem;
}
.order_goods_img{
	width: 1.21rem;
	height: 1.21rem;
	float: left;
	margin-right: 0.2rem;
}
.order_goods_img img{
	width: 100%;
	height: 100%;
}
.order_goods_text{
	height: 1.21rem;
}
.order_goods_text .order_number{
	font-size: 0.3737rem;
	color: #666666;
	margin-bottom: 0.1rem;
}
.order_goods_text .order_price .consignee,.order_goods_text .order_price .consignee_name{
	font-size: 0.3126rem;
	color: #999999;
	display: inline-block;
    line-height: 0.7rem;
}
.order_goods_text .order_price .consignee_name{
	font-size: 0.27rem;
}
.order_goods_text .order_price{
	height: 0.6rem;
}
.order_goods_text .order_price .price{
	color: #d60303;
	font-size: 0.5167rem;
	float: right;
}
.order_goods_text .order_price .price .rmb_logo{
	font-size: 0.3811rem;
	font-style: inherit;
}
