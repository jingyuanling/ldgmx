.life_order_record_wrap{
	width: 100%;
	height: 100%;
	overflow-y: scroll;
	background-color: #efefef;
	padding-top: 1.00rem;
}
.order_record_title{
	font-size: 0.30rem;
	padding-left: 3%;
	box-sizing: border-box;
	line-height: 0.67rem;
}
.order_record_details_ul,.order_record_details_ul li{
	width: 100%;
}
.order_record_details_ul li{
	background-color: #ffffff;
    border-top: 0.01rem solid #d6d6d6;
    position: relative;
}
.order_record_details{
	height: 1.20rem;
	overflow: hidden;
	box-sizing: border-box;
	font-size: 0;
}
.order_record_details .order_merchant_logo{
	float: left;
	width: 1.00rem;
	height: 1.00rem;
	margin-top: 0.1rem;
	margin-left: 0.2rem;
}
.order_record_details .order_merchant_message{
	position: absolute;
    left: 1.4rem;
    height: 1.2rem;
    top: 0.18rem;
}
.order_record_details .order_appraise{
	float: right;
    width: 20%;
    text-align: center;
    height: 100%;
	line-height: 1.2rem;
    font-size: 0.36rem;
    color: white;
    background-color: #d9333f;
}
/*已评价状态*/
.order_record_details .no_evaluation{
	color: white;
    background-color: #a3a3a3;
}
.order_merchant_logo img{
	height: 100%;
	width: 100%;
	border-radius: 50%;
}
.order_merchant_message p{
	display: inline-block;
	width: 100%;
	overflow: hidden;
    font-size: 0.30rem;
}
.order_merchant_message .p2{
	color: #aaaaaa;
}
.order_merchant_message .p1{
	color: #222222;
}
