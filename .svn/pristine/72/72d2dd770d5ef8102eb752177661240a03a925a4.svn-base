.CZQ_content_wrap{
	width: 100%;
}
.CZQ_content_wrap_title{
	width: 100%;
}
.CZQ_content_wrap_title img{
	width: 100%;
}
.CZQ_content_center,.CZQ_content_bottom{
	width: 1200px;
	margin: 0 auto;
	margin-bottom: 10px;
}
.CZQ_free_area,.four_percent_area{
	width: 100%;
}
.CZQ_free_area_title{
	overflow: hidden;
	padding-bottom: 5px;
	border-bottom: 2px solid #ffc72d;
}
.CZQ_free_area_title .CZQ_free_area_title_span1{
	font-size: 18px;
	float: left;
}
.CZQ_free_area_title .CZQ_free_area_title_span2{
	font-size: 16px;
	float: right;
	margin-top: 10px;
}
.CZQ_free_area_content{
	width: 1150px;
	margin: 0 auto;
	padding: 35px 0;
	overflow: hidden;
}
.CZQ_free_area_content .CZQ_free_area_contentL{
	width: 320px;
	float: left;
	border-top: 1px solid #e1e1e1;
	border-left: 1px solid #e1e1e1;
	border-right: 1px solid #e1e1e1;
}
.CZQ_free_area_content .CZQ_free_area_contentR{
	width: 790px;
	float: right;
}
.CZQ_contentL_img{
	width: 100%;
	height: 320px;
	border-bottom: 1px solid #e1e1e1;
}
.CZQ_contentL_img img{
	width: 100%;
	height: 100%;
}
.goods_description{
	color: #333333;
	font-size: 16px;
	margin-bottom: 5px;
	margin-top: 5px;
	padding-left: 5px;
	box-sizing: border-box;
	display: inline-block;
	width: 100%;
	height: 75px;
	line-height: 25px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
}
.CZQ_free_area_contentL .now_price{
	color: #F15946;
	font-size: 20px;
	padding-left: 5px;
	box-sizing: border-box;
}
.look_more{
	margin-top: 10px;
}
.look_more,.look_more img{
	width: 100%;
}
.CZQ_goods_list_wrap{
	width: 100%;
	overflow: hidden;
}
.CZQ_goods_list{
	width: 265px;
	float: left;
	margin-left: 28px;
	padding-top: 35px;
}
.CZQ_goods_list_img,.CZQ_goods_list_img img{
	width: 100%;
	height: 265px;
}
.CZQ_price_div{
	width: 100%;
	height: 55px;
	line-height: 55px;
	margin-top: 10px;
	background-color: #fd5740;
	color: white;
	font-size: 26px;
	padding-left: 10px;
	box-sizing: border-box;
	position: relative;
}
.CZQ_price_div .QGimg{
	height: 100%;
	position: absolute;
	right: 0;
	top: 0;
}
/*插件样式更改*/
.swiper-pagination-bullet {
	width: 10px;
	height: 10px;
	display: inline-block;
	border-radius: 100%;
	opacity: .2
}
.swiper-pagination-bullet-active {
	opacity: 1;
	background: #fd5740
}
.swiper-button-next,
.swiper-container-rtl .swiper-button-prev {
	background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23c3c2bb'%2F%3E%3C%2Fsvg%3E");
	right: 10px;
	left: auto
}
.swiper-button-prev,
.swiper-container-rtl .swiper-button-next {
	background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23c3c2bb'%2F%3E%3C%2Fsvg%3E");
	left: 10px;
	right: auto
}