/* pages/myEva/myEva.wxss */
.my_eva_wrap{
  width: 100%;
	height: 100%;
	overflow-y: scroll;
	padding-top: 100rpx;
	background-color: #f6f6f6;
}
.my_eva_wrap .my_eva_ul{
  display:block;
	background-color: #f6f6f6;
  box-sizing: border-box;
}
.my_eva_wrap .my_eva_ul li{
	border-top: 1rpx solid #e5e5e5;
	border-bottom: 1rpx solid #e5e5e5;
    width: 100%;
    overflow: hidden;
    padding: 20rpx 3% 0;
    margin-bottom: 20rpx;
    background-color: white;
    display:block;
    box-sizing: border-box;
}
.my_eva_ul .my_eva_li_left{
	float: left;
}
.my_eva_ul .my_eva_li_right{
	width: 100%;
	padding-left: 120rpx;
}
.my_eva_ul .my_eva_li_left image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.my_eva_username{
	color: #363636;
	font-size: 28rpx;
	line-height: 60rpx;
	font-weight: 600;
  font-family: "黑体";
  display:block;
}
.my_eva_star{
  display:block;
	overflow: hidden;
}
.my_eva_star image{
	float: left;
	width: 20rpx;
	height: 20rpx;
	margin-right: 10rpx;
}
.my_eva_remark{
  font-size: 24rpx;
  line-height: 30rpx;
  margin-top: 20rpx;
  color: #8d8d8d;
  margin-bottom: 10rpx;
  display: block;
}
.enter_store_wrap{
	padding: 13rpx 15rpx;
	background-color: #f6f6f6;
	overflow: hidden;
  margin-top:20rpx;
}
.enter_store_logo{
	width: 95rpx;
	height: 95rpx;
	float: left;
}
.enter_store_logo image{
	width: 100%;
	height: 100%;
}
.enter_store_p{
	padding-left: 20rpx;
	overflow: hidden;
	line-height: 95rpx;
  display:block;
  height:95rpx;
}
.enter_store_p .store_name{
	display: inline-block;
	width: 60%;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow: hidden;
	color: #363636;
	font-size: 24rpx;
}
.enter_store{
	color: #d9333f;
	float: right;
	font-size: 18rpx;
}
.enter_store image{
	display: inline-block;
	width: 12rpx;
  height: 22rpx;
  position: relative;
  top:5rpx;
  margin-left:8rpx;

}
.enter_del_eva{
	text-align: right;
	font-size: 18rpx;
  line-height: 80rpx;
	color: #bcbcbc;
  display:block;
}
