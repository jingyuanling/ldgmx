.internal-recom-wrap::-webkit-scrollbar{
	display: none;
}
.internal-recom-wrap{
	width: 100%;
	height: 100%;
	overflow-x: hidden;
	overflow-y: scroll;
	background: url(../imgs/wrap-bg.png) 0 0 no-repeat;
	background-size: 100% 100%;
	padding-top: 0.88rem;
	font-family: "黑体";
}
.double-debt-nav{
	width: 100%;
	height: 0.88rem;
	position: fixed;
	top: 0;
	max-width: 7.5rem;
	min-width: 6.4rem;
	background-color: #d60e19;
	z-index: 9;
}
.double-debt-nav .nav_tit{
	font-size: 0.3435rem;
	color: white;
	text-align: center;
	line-height: 0.88rem;
	font-family:'jingzhizongyiti10fb85c4641b4cb';
}
.double-debt-nav .left_return{
    width: 0.34rem;
    height: 0.5rem;
    display: inline-block;
    position: absolute;
    left: 0.3rem;
    top: 0.19rem;
}
.upper-tit{
	padding: 0.6rem 0.18rem 0.15rem;
}
.upper-tit,.upper-tit img{
	width: 100%;
}
.double-debt-nav .right_red_env img,.double-debt-nav .left_return img{
	width: 100%;
	height: 100%;
}
.recom-content-wrap{
	padding: 0 0.38rem;
}
.recom-content{
	width: 100%;
	background: url(../imgs/content-bg.png) 0 0 no-repeat;
	background-size: 100% 100%;
	padding: 0.9rem 0.34rem 1.2rem 0.53rem;
}
.recom-content .tit,.recom-content .amount{
	font-size: 0.32rem;
	text-align: center;
	font-weight: bold;
	color: #32322d;
}
.recom-content .amount{
	font-size: 0.45rem;
	line-height: 0.9rem;
	font-family: "微软雅黑";
}
.recom-content .share-btn{
	text-align: center;
	font-size: 0.32rem;
	background-color: #fed100;
	width: 2.27rem;
	height: 0.7rem;
	line-height: 0.7rem;
	margin: 0 auto;
	box-shadow: 0 0.05rem 0.1rem #888888;
	border-radius: 0.08rem;
}
.recom-content .small-text{
	font-size: 0.25rem;
	color: #565656;
	text-align: center;
	line-height: 0.8rem;
}
.recom-content .valid-time{
	border-top: 0.03rem dashed #807870;
	border-bottom: 0.03rem dashed #807870;
}
.recom-content .valid-time p{
	font-size: 0.32rem;
	color: #555453;
	text-align: center;
	line-height: 0.6rem;
}
