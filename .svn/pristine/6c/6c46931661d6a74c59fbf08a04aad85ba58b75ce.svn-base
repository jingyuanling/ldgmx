.quest-wrap{
	width: 100%;
	height: 100%;
	overflow-y: scroll;
	font-family: "微软雅黑";
	background-color: white;
	font-size: 0;
}
.big-tit{
	font-size: 0.4rem;
	text-align: center;
	line-height: 1.2rem;
}
.quest-wrap .tit-p1{
	font-size: 0.3rem;
	text-indent:0.32rem;
	padding: 0 0.25rem;
	line-height: 0.4rem;
}
.question{
	padding-top: 0.5rem;
}
.question .quest-tit-p{
	font-size: 0.3rem;
	padding: 0 0.25rem;
	line-height: 0.9rem;
	background-color: #e1e1e1;
}
.role-sel-ul{
	overflow: hidden;
	padding: 0 0.25rem 0.25rem;
}
.role-sel-ul li{
	width: 100%;
	font-size: 0.31rem;
	color: #666666;
	line-height: 0.7rem;
}
.role-sel-ul li a{
	color: #666666;
}
.role-sel-ul .role-sel,.role-sel-ul .role-seldx{
	width: 0.32rem;
	height: 0.32rem;
	display: inline-block;
	border: 0.03rem solid #1bbc9b;
	position: relative;
	top: 0.05rem;
	margin-right: 0.2rem;
	border-radius: 50%;
}
.role-sel-ul .role-sel-white,.role-sel-ul .role-seldx-white{
	width: 0.16rem;
	height: 0.16rem;
	display: inline-block;
	background-color: white;
	position: absolute;
	top: 0.05rem;
	left: 0.05rem;
	border-radius: 50%;
}
.role-sel-ul .role-seldx,.role-sel-ul .role-seldx-white{
	border-radius:0.03rem;
}
.role-sel-ul .role-sel-red{
	background-color: #1bbc9b;
}
.question .quest-tit-p span{
	color: #FF0000;
}
.role-sel-ul textarea{
	height: 0;
	width: 0;
	overflow: hidden;
	font-size: 0.28rem;
	text-indent: 0.5rem;
	border: 0.01rem solid #999999;
}
.role-sel-ul .alone-textarea{
	height: 1rem;
	width: 100%;
	margin-top: 0.2rem;
}
.role-sel-ul .inp-li{
	height: 0.7rem;
    margin-top: 0.2rem;
}
.role-sel-ul .inp-li input{
	margin-left: 0.2rem;
	height: 0.5rem;
    width: 5rem;
	border: 0.01rem solid #999999;
}
.btm-btn-div{
	width: 100%;
	text-align: center;
}
.btm-btn-div .inp-btn{
    width: 3rem;
    height: 0.8rem;
    font-size: 0.3rem;
    background-color: #1bbc9b;
    color: white;
    outline: none;
    border: none;
    border-radius: 0.1rem;
    margin: 0.3rem auto 1rem;
}
