.life_map_wrap{
	width: 100%;
	height: 100%;
	overflow-y: scroll;
    background-color: #efefef;
    padding-top: 1rem;
    padding-bottom: 0;
}
.life_map_content{
	width: 100%;
	height: 6.0rem;
}
.life_class_title{
	background-color: white;
	border: 0.01rem solid #d3d3d3;
	overflow: hidden;
	display: flex;
    justify-content: space-around;
}
.life_class_title span{
	display: inline-block;
	font-size: 0.37rem;
    height: 1rem;
    line-height: 1rem;
	box-sizing: border-box;
}
.life_class_title .life_class_title_span_active{
	font-size: 0.45rem;
	color:#ff6b6a;
}
/*商品列表样式*/
.home_good_recommend{
	width: 100%;
	padding: 0.2rem 0.3rem;
	box-sizing: border-box;
	background-color: #ffffff;
}
.home_good_recommend_title_div{
	width:100%;
	background-color:white;
	padding: 0.2rem 3% 0 3%;
    box-sizing: border-box;
    margin-top: 0.16rem;
}
.home_good_recommend_title{
	font-size: 0.34rem;
	padding-left: 0.13rem;
	text-align: left;
	border-left: 0.08rem solid #fd9d21;
}
.home_good_recommend_list{
	width: 100%;
}
.home_good_recommend_list .good_list_left_img{
	float: left;
	width: 1.6rem;
    height: 1.6rem;
}
.home_good_recommend_list .good_list_left_img img{
	width: 100%;
	height: 100%;
}
.home_good_recommend_list .good_list_right_text{
	width: 100%;
	height: 1.6rem;
    padding-left: 1.8rem;
	box-sizing: border-box;
}
.home_good_recommend_list ul li{
	margin-top: 0.2rem;
}
.good_list_right_text .right_text_goods_name,.good_list_right_text .good_list_right_address,.good_list_right_text .good_list_right_deduction{
	height: 0.55rem;
	width: 100%;
	line-height: 0.55rem;
	font-size: 0.3rem;
	overflow: hidden;
}
.right_text_goods_name{
	color: #000000;
	overflow: hidden;
}
.right_text_goods_name span{
	font-size: 0.24rem;
	color: #9d9d9d;
	margin-left: 0.2rem;
	float: left;
}
.good_list_right_address{
	position: relative;
}
.good_list_right_text .right_text_goods_name p,.good_list_right_text .good_list_right_address p{
	display: inline-block;
	max-width: 3.4rem;
	overflow: hidden;
	float: left;
}
.good_list_right_address span{
	display: inline-block;
	height: 0.35rem;
	line-height: 0.35rem;
	margin-top: 0.1rem;
	padding: 0 0.2rem;
	color: #ff7800;
	border: 0.01rem solid #ff7800;
	position: absolute;
    right: 0.3rem;
}
.good_list_right_deduction{
	color: #ff6b6a;
}
.good_list_right_deduction span{
	font-size: 0.34rem;
}