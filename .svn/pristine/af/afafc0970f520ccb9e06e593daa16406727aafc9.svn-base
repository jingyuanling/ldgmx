@charset "utf-8";

body {
    width: 100%;
    min-width: 320px;
    max-width: 640px;
    margin: 0 auto;
    font-family: "微软雅黑";
}
*{
    margin:0;
    padding:0;
}
img{
  border:0;
  display: block;
}
.clearfix:after {
visibility: hidden;
display: block;
font-size: 0;
content: " ";
clear: both;
height: 0;
}
.xrhb-tankuangceng{
    width: 100%;
    height: 100%;
    min-width: 320px;
    max-width: 640px;
    background-color:rgba(0,0,0,0.5);
    position: fixed;
}
.xrhb-tankuang{
    width: 280px;
    height: 280px;
    background-color: red;
    margin:0 auto;
    top: 50%;
    margin-top: -140px;
    position: relative;
    background:url(../img/xrhbsh.png) no-repeat 0 0;
    background-size: 280px 280px;
}
.xrhb-tankuang span{
    display: block;
    position:absolute;
    margin-top: 218px;
    margin-left: 89px;
    width: 103px;
    height: 47px;
}
.xrhb-tankuang p{
    width: 160px;
    height: 33px;
    margin-left: 61px;
    margin-top: 89px;
    position: absolute;
    color: #fff;
    font-size: 20px;
    font-weight: 900;
   
    text-align: center;
}
.xrhb-tankuang p.p2{
    width: 170px;
    height: 33px;
    margin-left: 57px;
    margin-top: 163px;
    position: absolute;
    color: #da4e3f;
    font-size:16px;
    font-weight: 900;
    text-align: center;
}