@charset "utf-8";

body {
    width: 100%;
    font-family: "微软雅黑";
}
*{
    margin:0;
    padding:0;
}
img{
  border:0;
  display: block;
}
.clearfix:after {
visibility: hidden;
display: block;
font-size: 0;
content: " ";
clear: both;
height: 0;
}
.xrhb-tankuangceng{
    width: 100%;
    height: 100%;
    background-color:rgba(0,0,0,0.5);
    position: fixed;
}
.xrhb-tankuang{
    width: 600px;
    height: 600px;
    background-color: red;
    margin:0 auto;
    top: 50%;
    margin-top: -300px;
    position: relative;
    background:url(../img/xrhbsh.png) no-repeat 0 0;
    background-size: 600px 600px;
}
.xrhb-tankuang span{
    display: block;
    position:absolute;
    margin-top: 468px;
    margin-left: 190px;
    width: 220px;
    height: 100px;
}
.xrhb-tankuang p{
    width: 340px;
    height: 65px;
    margin-left: 132px;
    margin-top: 189px;
    position: absolute;
    color: #fff;
    font-size: 43px;
    font-weight: 900;
    text-align: center;
}
.xrhb-tankuang p.p2{
    width: 340px;
    height: 65px;
    margin-left: 132px;
    margin-top: 350px;
    position: absolute;
    color: #da4e3f;
    font-size:35px;
    font-weight: 900;
    text-align: center;
  
}