*{
	margin: 0;
	padding: 0;
}
body{
	width: 100%;
    font-family: "微软雅黑";
}
.appointment_window_wrap{
	width: 100%;
	height: 100%;
	background-color:rgba(0,0,0,0.6);
	position: fixed;
	top: 0;
	left: 0;
	display: none;
}
.appointment_window{
	width: 520px;
	height: 310px;
	margin: 150px auto;
	background-color: white;
}
.appointment_window_top{
	width: 100%;
	height: 57px;
	background-color: #dcdcdc;
	overflow: hidden;
}
.appointment_window_top>img{
	height: 25px;
	float: right;
	margin-top: 16px;
	margin-right: 16px;
}

.tk_content{
	padding: 0 56px;
	margin-top: 40px;
	/*border: 1px solid blue;*/
}
.phone_num{
	height: 42px;
	position: relative;
	/*border: 1px solid red;*/
}
.phone_num>span{
	display: inline-block;
}
.phone_num_text{
	position: absolute;
	font-size: 16px;
	height: 40px;
	line-height: 40px;
	left: 0;
	top: 0;
}
.phone_num_inp{
	position: absolute;
	width: 200px;
	height: 40px;
	left: 78px;
	top: 0;
	border: 1px solid #757575;
}
.get_code{
	position: absolute;
	width: 118px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	top: 0;
	left: 287px;
	border: 1px solid #757575;
}
.verification{
	height: 40px;
	margin-top: 25px;
	position: relative;
}
.verification>span{
	display: inline-block;
}
.verification_text{
	position: absolute;
	font-size: 16px;
	height: 40px;
	line-height: 40px;
	left: 0;
	top: 0;
}
.verification_inp{
	position: absolute;
	width: 328px;
	height: 40px;
	left: 78px;
	top: 0;
	border: 1px solid #757575;
}
.sure_btn{
	width: 100%;
	height: 40px;
	border: 1px solid #757575;
	text-align: center;
	line-height: 40px;
	margin-top: 25px;
}
