.life_select_address_wrap{
	width: 100%;
	background-color: #efefef;
	padding-top: 50px;
}
.life_select_inp_div{
	width: 94%;
	margin-left: 3%;
	position: relative;
}
.life_select_content_inp{
	width: 100%;
	background-color: #FFFFFF;
	padding: 0.8em 0;
	margin-bottom: 1em;
}
.life_select_content_inp input{
	width: 100%;
	font-size: 1em;
	border: none;
	text-align: center;
	line-height: 2em;
	background-color: #e6e6e6;
	padding-right: 5%;
	box-sizing: border-box;
	border-radius: 5px;
}
.life_select_inp_span{
	display: inline-block;
	width: 15%;
	height: 100%;
	position: absolute;
	right: 0;
	top: 0;
	background-color: #d9333f;
	text-align: center;
	border-radius: 0 5px 5px 0;
}
.life_select_inp_span img{
	height: 80%;
	margin: 0 auto;
	margin-top: 10%;
}
.life_select_localize{
	width: 100%;
	font-size: 1.1em;
	text-align: center;
	line-height: 3em;
	background-color: white;
	color: #022222;
}
.life_hot_city{
	width: 100%;
	font-size: 1.1em;
	line-height: 2.8em;
	padding-left: 3%;
	color: #666666;
}
.life_hot_search{
	width: 100%;
	background-color: white;
	padding: 0.5em 3%;
}
.life_all_search{
	background-color: white;
}
.life_all_search_content{
	width: 100%;
	line-height: 2em;
	border-top: 1px solid #d3d3d3;
	border-left: 1px solid #d3d3d3;
	overflow: hidden;
}
.life_all_search_content span{
	display: inline-block;
	float: left;
	width: 16.59%;
	text-align: center;
	font-size: 1em;
	color: #222222;
	border-bottom: 1px solid #d3d3d3;
	border-right: 1px solid #d3d3d3;
}
/*选择城市的选中状态*/
.life_all_search_content .life_all_search_active{
	color: white;
	background-color: #d9333f;
}
