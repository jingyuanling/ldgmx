.goods-details-wrap{
	width: 100%;
	background-color: #fff;
}
.goods-details-content{
	width: 1200px;
	margin: 0 auto;
	position: relative;
}
.fine-goods-nav{
	top: -75px;
}
.details_content_nav{
	width: 100%;
	height: 40px;
	overflow: hidden;
	background-color: #f2f2f2;
}
.content_nav_wrap{
	width: 1200px;
	height: 100%;
	margin: 0 auto;
    overflow: hidden;
}
.crumbs-nav-item{
	width: 950px;
	height: 100%;
	font-size: 14px;
    line-height: 26px;
    line-height: 40px;
    color: #666666;
    float: left;
}
.crumbs-arrow {
    font-family: simsun;
    font-style: normal;
}
.content_nav_right{
	float: right;
	width: 230px;
	line-height: 40px;
}

.qq_talk,.btn_collection{
	display: inline-block;
}
.qq_talk_logo,.collection_goods{
	display: inline-block;
	width: 15px;
	height: 15px;
    margin-right: 7px;
    position: relative;
    top: 2px;
}
.qq_talk_logo{
	background: url(../img/qq.logo.png) 0 0 no-repeat;
}
.qq_talk,.btn_collection{
	font-size: 14px;
	color: #666666;
}
.collection_goods{
	width: 17px;
	height: 14px;
	margin-left: 40px;
	background: url(../img/gray-heart.png) 0 0 no-repeat;
}
.qq_talk:hover,.btn_collection:hover{
	color: #d90a21;
	cursor: pointer;
}
.btn_collection:hover .collection_goods{
	background: url(../img/red-heart.png) 0 0 no-repeat;
}
.qq_talk:hover .qq_talk_logo{
	background: url(../img/gray-qq-logo.png) 0 0 no-repeat;
}
.collection_goods_active{
	background: url(../img/red-heart.png) 0 0 no-repeat;
}
.btn_collection .span_active{
	color: #d90a21!important;
}
