.life_Qrcode_wrap{
	width: 100%;
	height: 100%;
	border: 1px solid #d9333f;
	background-color: #d9333f;
	box-sizing: border-box;
}
.life_Qrcode_content{
	width: 90%;
	height: 90%;
	margin-left: 5%;
	margin-top: 5%;
	background-color: white;
}
.life_Qrcode_title{
	padding-left: 3%;
	font-size: 1.2em;
	color: #d9333f;
	line-height: 3em;
	border-bottom: 1px solid #d3d3d3;
}
.life_Qrcode_title img{
	height: 1.2em;
	display: inline-block;
}
.life_merchants_name{
	font-size: 1.1em;
	text-align: center;
	line-height: 3em;
	margin-top: 3em;
	color: #222222;
}
.life_merchants_Qrcode{
	text-align: center;
	margin-top: 1em;
}
.life_merchants_Qrcode img{
	margin: 0 auto;
	width: 50%;
}
.life_save_btn{
	font-size: 1.1em;
	color: white;
	line-height: 2em;
	width: 70%;
	margin-left: 15%;
	background-color: #d9333f;
	text-align: center;
	margin-top: 1.5em;
	border-radius: 0.3em;
}
