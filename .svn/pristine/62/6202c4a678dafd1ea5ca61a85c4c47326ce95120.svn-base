.wine_HB_wrap{
	padding-top: 39px;
	width: 100%;
	height: 100%;
	background-color: #f3f5f7;
}
.wine_HB{
	width: 90%;
	margin-left: 5%;
	border: 1px dashed #bfbebe;
	background-color: #f9f6f6;
	margin-top: 1em;
	overflow: hidden;
	height: 7.8em;
	line-height: 2.6em;
	padding-left: 0.5em;
	border-radius: 0.5em;
}
.wine_HB .wine_HB_left{
	float: left;
}
.wine_HB .wine_HB_right{
	float: right;
}
.wine_HB_left_p1{
	font-size: 2em;
	color: #d9333f;
}
.wine_HB_left_p2{
	font-size: 1.5em;
	color: black;
}
.wine_HB_left_p3{
	font-size: 1.2em;
	color: #bfbebe;
}
.wine_HB_right{
	width: 20%;
	height: 100%;
	color: white;
	font-size: 1.5em;
	background-color: #d9333f;
	text-align: center;
	line-height: 2.5em;
}
.wine_HB_left_p1_span{
	font-size: 0.7em;
	margin-left: 0.3em;
	padding: 0.1em 0.2em;
	color: #999999;
	border: 1px solid #bfbebe;
}
