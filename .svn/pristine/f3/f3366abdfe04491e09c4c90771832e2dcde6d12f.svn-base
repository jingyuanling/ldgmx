    margin-top: 210px;
    margin-left: -27px;
}
.huodong4{
    width: 100%;
    height: 1080px;
    background-color: #ffc600;
}
.huodong4 img{
    position: absolute;
    left: 50%;
    margin-left: -581px;
}
.huodong4 .shangpin{
   /* width: 955px;
    height: 632px;*/
    position: absolute;
    z-index: 1;
    left: 50%;
    margin-left: -477px;
    margin-top: 245px;
}
.huodong4 .shangpin ul{
    margin-bottom: 10px;
    width: 955px;
    height: 312px;
}
.huodong4 .shangpin ul li{
    width: 232px;
    height:312px;
    background-color: #fff;
    margin-right: 9px;
    list-style: none;
    border-radius: 4px;
    float: left;

}
.huodong4 .shangpin ul li.last{
    margin-right:0px;
}
.huodong4 .shangpin ul li > span{
    width: 220px;
    height: 220px;
    background-color:#efefef;
    margin:0 auto;
    display: block;
    margin-top: 6px;
}
.shangpin ul li p{
    margin-top: 10px;
    margin-left: 5px;
    line-height: 25px;
    font-size: 24px;
    font-family: "宋体";
    color:000;
}
.shangpin ul li p.money{
    font-size: 14px;

}
.shangpin ul li p.money span{
    font-size: 36px;
    color:#c30000;
    font-family: "微软雅黑";
    font-weight: bold;
}
.zoomIn{
    -webkit-animation:zoomIn 2s ease-in-out 0s infinite;
    -moz-animation:swinging 2s ease-in-out 0s infinite;
    animation:swinging 2s ease-in-out 0s infinite;
    transition-delay:2s;
}