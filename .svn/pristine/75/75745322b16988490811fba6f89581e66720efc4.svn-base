.back-pwd-inps input{
	border: none;
	height: 0.75rem;
	background-color: #f2f2f2;
	outline-style: none;
	box-shadow: none;
	font-size: 0.24rem;
	border-radius: 0.1rem;
	color: #e74147;
	margin-bottom: 0.39rem;
}
.back-pwd-inps{
	padding-top: 0.65rem;
}
.back-pwd-btn{
	font-size: 0.3rem;
	height: 0.75rem;
	margin-top: 0.78rem;
	background-color: #e74147;
	color: white;
	letter-spacing: 0.2rem;
    text-indent: 0.2rem;
}
.back-pwd-inps .back-pwd-code{
	font-size: 0.24rem;
	height: 0.75rem;
	width: 1.9rem;
	color: #e74147;
	float: right;
	margin-top: -1.1rem;
	border-color: #e74147!important;
}
.form-group2 input{
	width: 4.25rem;
}
.form-group{
	position: relative;
}
.form-group .error{
	font-size: 0.18rem;
	color: #e74147;
	position: absolute;
	top: 0.78rem;
	left: 0.1rem;
}
.btn:focus{
	color: white;
}
.btn.focus, .btn:focus, .btn:hover{
	color: white;
}