body{
	background-color: #f3f5f7;
}
.wine_present_content{
	padding-top: 39px;
	background-color: #f8f8f8;
}
.wine_present_num,.wine_bound_code{
	padding: 0.8em;
	box-sizing: border-box;
	border-bottom: 1px solid #d7d7d7;
}
.wine_present_num_span,.wine_bound_code_span{
	font-size: 0.8em;
}
.wine_present_num2{
	font-size: 0.8em;
}
.wine_present_num input{
	width: 60%;
	font-size: 0.75em;
	border: none;
	outline:none; 
	color: #9f9f9f;
	background-color: #f8f8f8;
	padding: 0.2em 0.2em;
}
.wine_bound_code{
	overflow: hidden;
}
.wine_bound_code .wine_bound_code_input1{
	width: 40%;
	font-size: 0.75em;
	border: none;
	outline:none; 
	padding: 0.2em 0.2em;
	background-color: #f8f8f8;
	color: #9f9f9f;
}
.wine_bound_code .wine_bound_code_btn{
	border: none;
	outline:none; 
	width: 35%;
	background-color: #d9333f;
	text-align: center;
	float: right;
	font-size: 0.8em;
	color: white;
	padding: 0.2em 0.2em;
	border-radius: 0.3em;
}
.wine_present_sure_btn{
	width: 70%;
	font-size: 1.0em;
	text-align: center;
	padding: 0.5em 0;
	color: white;
	margin-left: 15%;
	margin-top: 1.5em;
	border-radius: 0.5em;
	background-color: #d9333f;
}
