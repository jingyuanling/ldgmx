.my_eva_wrap{
	width: 100%;
	height: 100%;
	overflow-y: scroll;
	padding-top: 1rem;
	background-color: #f6f6f6;
}
.my_eva_wrap .my_eva_ul{
	background-color: #f6f6f6;
}
.my_eva_wrap .my_eva_ul li{
	border-top: 0.01rem solid #e5e5e5;
	border-bottom: 0.01rem solid #e5e5e5;
    width: 100%;
    overflow: hidden;
    padding: 0.2rem 3% 0;
    margin-bottom: 0.2rem;
    background-color: white;
}
.my_eva_ul .my_eva_li_left{
	float: left;
}
.my_eva_ul .my_eva_li_right{
	width: 100%;
	padding-left: 1.2rem;
}
.my_eva_ul .my_eva_li_left img{
	width: 1rem;
	height: 1rem;
	border-radius: 50%;
}
.my_eva_username{
	color: #363636;
	font-size: 0.28rem;
	line-height: 0.60rem;
	font-weight: 600;
    font-family: "黑体";
}
.my_eva_star{
	overflow: hidden;
}
.my_eva_star img{
	float: left;
	width: 0.2rem;
	height: 0.2rem;
	margin-right: 0.1rem;
}
.my_eva_remark{
	font-size: 0.24rem;
    line-height: 0.3rem;
    margin-top: 0.1rem;
    color: #8d8d8d;
    margin-bottom: 0.1rem;
}
.enter_store_wrap{
	padding: 0.13rem 0.15rem;
	background-color: #f6f6f6;
	overflow: hidden;
}
.enter_store_logo{
	width: 0.95rem;
	height: 0.95rem;
	float: left;
}
.enter_store_logo img{
	width: 100%;
	height: 100%;
}
.enter_store_p{
	padding-left: 0.2rem;
	overflow: hidden;
	line-height: 0.95rem;
}
.enter_store_p .store_name{
	display: inline-block;
	width: 50%;
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow: hidden;
	color: #363636;
	font-size: 0.24rem;
}
.enter_store{
	color: #d9333f;
	float: right;
	font-size: 0.18rem;
}
.enter_store img{
	display: inline-block;
    width: 0.12rem;
    height: 0.22rem;
    position: relative;
    top: -0.02rem;
}
.enter_del_eva{
	text-align: right;
	font-size: 0.18rem;
    line-height: 0.8rem;
	color: #bcbcbc;
}
