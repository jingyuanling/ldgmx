.change-pay-pwd{
	width: 100%;
	height: 100%;
	padding-top: 0.88rem;
	overflow-y: scroll;
	background-color: #f8f8f8;
}
.upper-pwd-inp{
	width: 100%;
	border-bottom: 0.01rem solid #d9d9d9;
	padding-top: 1.8rem;
	padding-bottom: 1rem;
}
.upper-pwd-inp p{
	font-size: 0.35rem;
	color: #666666;
	text-align: center;
}
#inp-pwd{
	display: none;
}
.upper-pwd-inp li{
	width: 0.72rem;
	height: 0.72rem;
	font-size: 0.35rem;
	line-height: 0.8rem;
	text-align: center;
	float: left;
	border: 0.03rem solid #999999;
}
.upper-pwd-inp ul{
	overflow: hidden;
	display: flex;
	justify-content: space-between;
	padding: 0.6rem;
	padding: 0.6rem 0.6rem 0.2rem;
}
.under_inp_text{
	overflow: hidden;
	padding: 0 0.6rem;
	padding-bottom: 0.3rem;
}
.under_inp_text span{
	font-weight: lighter;
}
.under_inp_text .pwd_forget{
	float: right;
	color: #1974b5;
	font-size: 0.31rem;
}
.pwd_error{
	float: left;
	color: #FF1F53;
	font-size: 0.31rem;
	display: none;
}
.keyboard-wrap{
	width: 100%;
	background-color: white;
	position: absolute;
	bottom: 0;
	position: fixed;
	min-width: 320px;
	max-width: 750px;
}
.keyboard_ul{
	display: inline-block;
	width: 100%;
	display: flex;
	justify-content: space-around;
	 flex-flow: wrap;
}
.keyboard_ul li{
	display: inline-block;
	width: 2.5rem;
	height: 1.1rem;
	color: #333333;
	line-height: 1.1rem;
	text-align: center;
	font-size: 0.6662rem;
	border-top: 0.01rem solid #e4e8ef;
}
.keyboard_ul li:nth-child(3n+2){
	border-left: 0.01rem solid #e4e8ef;
	border-right: 0.01rem solid #e4e8ef;
}
.keyboard_ul li:nth-child(10),.keyboard_ul li:nth-child(12){
	background-color: #e4e8ef;
}
.keyboard_ul li img{
	width: 0.49rem;
	height: 0.49rem;
	margin: 0.305rem auto 0;
}
.keyboard_ul .keyboard_cancel{
	font-size: 0.45rem;
}
