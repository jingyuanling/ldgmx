.system-nav{
	box-shadow: none;
}
.manage-center-wrap{
	width: 100%;
	height: 100%;
	padding-top: 0.88rem;
	padding-bottom: 1.1rem;
	overflow-y: scroll;
}
.manage-center-upper{
	width: 100%;
	height: 2rem;
	background-color: #ca0303;
    padding: 0 0.3rem;
    overflow: hidden;
}
.manage-center-photo{
    width: 1.39rem;
	height: 1.39rem;
    border-radius: 50%;
	margin-right: 0.2rem;
	border-radius: 50%;
	margin-top: 0.3rem;
	float: left;
}
.manage-center-name{
	display: inline-block;
}
.manage-center-name .manage-center-name_p1{
	font-size: 0.36rem;
	color: white;
    margin-bottom: 0.2rem;
    margin-top: 0.48rem;
}
.manage-center-name .manage-center-name_p2{
	font-size: 0.28rem;
	color: white;
	font-weight: lighter;
}
.manage-center-pen{
	width: 0.4rem;
    height: 0.4rem;
    float: right;
    margin-top: 1rem;
}
.manage-center-pen img{
	width: 100%;
	height: 100%;
}
.manage-center-ul{
	margin-top: 0.25rem;
	border-top: 0.01rem solid #ececec;
}
.manage-center-ul li{
	width: 100%;
	height: 0.78rem;
	padding: 0 0.3rem;
	line-height: 0.77rem;
	border-bottom: 0.01rem solid #ececec;
}
.manage-center-ul li a{
	display: inline-block;
	width: 100%;
}
.manage-center-ul li p{
	display: inline-block;
	float: left;
	width: 0.38rem;
	height: 100%;
	margin-right: 0.2rem;
}
.manage-center-ul li img{
	display: inline-block;
}
.manage-center-ul li span{
	font-size: 0.34rem;
	display: inline-block;
	color: #666666;
	
}
