    <script type="text/javascript">
		$(function(){
			$('.ZF_voucher_details li').click(function(){
    			$('.ZF_voucher_details li').find("span").css({
    				"background-color":"transparent"
    			});
	    		$(this).find("span").css({
	    			"background-color":"#d9333f"
	    		});
	    		$('.ZF_coupon_box_wrap').fadeOut();
	    		$('.ZF_coupon_box').animate({
	    			"bottom":"-100"
	    		});
	    	});
	    	$('.wine_hb').click(function(){
	    		$('.ZF_coupon_box_wrap').fadeIn();
	    		$('.ZF_coupon_box').animate({
	    			"bottom":"0"
	    		});
	    	});
	    	$('.ZF_coupon_box_titleL').click(function(){
	    		$('.ZF_voucher_details').show();
	    		$('.ZF_voucher_details2').hide();
	    		$('.ZF_coupon_box_titleL').css({
	    			"color":"black"
	    		});
	    		$('.ZF_coupon_box_titleR').css({
	    			"color":"#999999"
	    		});
	    	});
	    	$('.ZF_coupon_box_titleR').click(function(){
	    		$('.ZF_voucher_details').hide();
	    		$('.ZF_voucher_details2').show();
	    		$('.ZF_coupon_box_titleL').css({
	    			"color":"#999999"
	    		});
	    		$('.ZF_coupon_box_titleR').css({
	    			"color":"black"
	    		});
	    	});
		})

